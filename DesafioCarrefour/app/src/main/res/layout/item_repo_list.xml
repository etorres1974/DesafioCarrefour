<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="?android:colorBackgroundFloating"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:padding="4dp"
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Nome repositorio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:drawableLeftCompat="@drawable/baseline_wb_sunny_6"
        android:drawablePadding="4dp"
        />

    <TextView
        android:padding="4dp"
        android:id="@+id/text_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Descricao"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="4dp"
            android:id="@+id/text_view_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Kotlin"
            android:drawablePadding="4dp"
            app:drawableLeftCompat="@drawable/baseline_code_24" />
        <TextView
            android:padding="4dp"
            android:id="@+id/text_view_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:drawablePadding="4dp"
            app:drawableLeftCompat="@drawable/baseline_star_outline_24" />
        <TextView
            android:padding="4dp"
            android:id="@+id/text_view_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:drawablePadding="4dp"
            app:drawableLeftCompat="@drawable/baseline_eye_24" />
        <TextView
            android:padding="4dp"
            android:id="@+id/text_view_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:drawablePadding="4dp"
            app:drawableLeftCompat="@drawable/baseline_call_fork_24" />
    </LinearLayout>

</LinearLayout>