<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:drawableLeftCompat="@drawable/baseline_wb_sunny_6"
            tools:text="Nome repositorio" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Descricao" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:padding="4dp"
                app:drawableLeftCompat="@drawable/baseline_code_24"
                tools:text="Kotlin" />

            <TextView
                android:id="@+id/text_view_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:padding="4dp"
                app:drawableLeftCompat="@drawable/baseline_star_outline_24"
                tools:text="1" />

            <TextView
                android:id="@+id/text_view_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:padding="4dp"
                app:drawableLeftCompat="@drawable/baseline_eye_24"
                tools:text="1" />

            <TextView
                android:id="@+id/text_view_fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:padding="4dp"
                app:drawableLeftCompat="@drawable/baseline_call_fork_24"
                tools:text="1" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>